<!DOCTYPE html>
<html>
  <head>
    <title>MiniTweetApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
       <%= link_to "MiniTweet", root_path %>
      </div>
      <ul class="header-menus">
       <% if @current_user %>
        <li><%= link_to @current_user.name,user_path(@current_user) %></li>
        <li><%= link_to "投稿一覧", posts_index_path %></li>
        <li><%= link_to "新規投稿", posts_new_path %></li>
        <li><%= link_to "全てのユーザー", users_path %></li>
        <li><%= link_to "ログアウト", logout_path, method: :post %></li>
       <% else %>
        <li><%= link_to "MiniTweetについて", about_path %></li>
        <li><%= link_to "ユーザー新規登録", new_user_path %></li>
        <li><%= link_to "ログイン", login_path %></li>
       <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
     <div class="flash"><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
